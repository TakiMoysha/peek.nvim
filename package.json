{
  "name": "peek.nvim",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "bun run scripts/build.js",
    "build:watch": "bun run scripts/build.js --watch",
    "build:fast": "FAST=true bun run --silent scripts/build.js",
    "build:debug": "DEBUG=true bun run scripts/build.js",
    "run": "bun run public/main.bundle.js",
    "start": "bun run build && bun run run --syntax",
    "start:dev": "NODE_ENV=development bun run start"
  },
  "dependencies": {
    "highlight.js": "^11.9.0",
    "katex": "^0.16.9",
    "markdown-it": "^14.0.0",
    "markdown-it-emoji": "^3.0.0",
    "markdown-it-footnote": "^4.0.0",
    "markdown-it-task-lists": "^2.1.1",
    "markdown-it-texmath": "^1.0.0",
    "open": "^10.0.3",
    "ws": "^8.14.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/katex": "^0.16.7",
    "@types/markdown-it": "^13.0.7",
    "@types/node": "^20.0.0",
    "@types/ws": "^8.5.0",
    "esbuild": "^0.19.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
